    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const heroContent = document.getElementById("heroContent");
            const titleToHide = document.getElementById("titletohide");
            if (heroContent) {
                setTimeout(() => {
                    heroContent.classList.remove("opacity-0");
                    heroContent.classList.add("opacity-100");
                }, 300);
            }
            const observerOptions = {
                root: null,
                rootMargin: "-20% 0px -30% 0px",
                threshold: 0.1,
            };
            const ocultarTitulo = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        titleToHide.style.opacity = "1";
                        console.log("Se ve");
                    } else {
                        titleToHide.style.opacity = "0";
                        titleToHide.style.transition = "opacity 0.5s ease";
                        console.log("No se ve");
                    }
                });
            }, observerOptions);

            if (heroContent) {
                ocultarTitulo.observe(heroContent);
            }
        });
    </script>
</BaseLayout>
